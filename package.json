{
  "name": "@dadi/ssl",
  "version": "1.0.0",
  "description": "Autonomous SSL certificate generation in support of SSL-first approach.",
  "main": "index.js",
  "scripts": {
    "test": "jest && node scripts/coverage/coverage.js"
  },
  "author": "Arthur Mingard <info@arthurmingard.com>",
  "license": "GPL",
  "dependencies": {
    "crypto": "0.0.3",
    "encoding": "^0.1.12",
    "mkdirp-promise": "^5.0.1",
    "moment": "^2.18.1",
    "node-fetch": "^2.0.0-alpha.6",
    "progress": "^2.0.0",
    "rsa-compat": "^1.2.7",
    "ursa": "^0.9.4",
    "utf8": "^2.1.2",
    "x509": "^0.3.2"
  },
  "devDependencies": {
    "istanbul-cobertura-badger": "^1.3.0",
    "jest": "^20.0.4",
    "nock": "^9.0.13"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/lib/**/*.{js}",
      "**/providers/**/*.{js}"
    ],
    "coverageReporters": [
      "cobertura"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  }
}
